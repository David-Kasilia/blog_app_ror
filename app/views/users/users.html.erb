<div class="users_view">
<h1 class="welcome">Welcome to the Users Page. Below is the list of users.</h1>
    <% User.all.each do |user| %>
    <%= link_to user do %>
    <div class="user-container">
    <div class="icon-container">
    <div class="user-icon"><%= image_tag ("#{user.photo}"), alt: "user icon / profile photo" %></div>
    </div>
    <div class="user-details">
    <div class="user-name"><%= user.name %></div>
    <div class="user-posts">Number Of Posts: <%= user.post_counter %></div>
    </div>
    </div>
    <% end %>
    <% end %>
</div>


